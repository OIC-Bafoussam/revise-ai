{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./build",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "#start/*": ["start/*"],
      "#controllers/*": ["app/controllers/*"],
      "#models/*": ["app/models/*"],
      "#validators/*": ["app/validators/*"],
      "#exceptions/*": ["app/exceptions/*"],
      "#services/*": ["app/services"]
    },
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "app",
    "start",
    "config",
    "database",
    "contracts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
