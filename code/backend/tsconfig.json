{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
   "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./build",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "#start/*": ["start/*"],
      "#controllers/*": ["app/controllers/*"],
      "#models/*": ["app/models/*"],
      "#validators/*": ["app/validators/*"],
      "#exceptions/*": ["app/exceptions/*"],
      "@ioc:Adonis/Core/*": ["node_modules/@adonisjs/core/build/*"],
      "@ioc:Adonis/Lucid/*": ["node_modules/@adonisjs/lucid/build/src/*"],
      "#services/*": ["app/services"],
      "@ioc:*": ["./.adonisrc.json"]
    },
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["app", "start", "config", "database", "contracts"],
  "exclude": ["node_modules", "build"]
}
